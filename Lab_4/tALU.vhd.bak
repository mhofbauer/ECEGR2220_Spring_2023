LIBRARY ieee;
USE ieee.std_logic_1164.ALL;
USE ieee.std_logic_unsigned.all;
USE ieee.numeric_std.ALL;

ENTITY testALU_vhd IS
END testALU_vhd;

ARCHITECTURE behavior OF testALU_vhd IS 

	-- Component Declaration for the Unit Under Test (UUT)
	COMPONENT ALU
		Port(	DataIn1: in std_logic_vector(31 downto 0);
			DataIn2: in std_logic_vector(31 downto 0);
			ALUCtrl: in std_logic_vector(4 downto 0);
			Zero: out std_logic;
			ALUResult: out std_logic_vector(31 downto 0) );
	end COMPONENT ALU;

	--Inputs
	SIGNAL datain_a : std_logic_vector(31 downto 0) := (others=>'0');
	SIGNAL datain_b : std_logic_vector(31 downto 0) := (others=>'0');
	SIGNAL control	: std_logic_vector(4 downto 0)	:= (others=>'0');

	--Outputs
	SIGNAL result   :  std_logic_vector(31 downto 0);
	SIGNAL zeroOut  :  std_logic;

BEGIN

	-- Instantiate the Unit Under Test (UUT)
	uut: ALU PORT MAP(
		DataIn1 => datain_a,
		DataIn2 => datain_b,
		ALUCtrl => control,
		Zero => zeroOut,
		ALUResult => result
	);
	

	tb : PROCESS
	BEGIN

		-- Wait 100 ns for global reset to finish
		wait for 100 ns;

		-- Start testing the ALU
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"000FFFF";
		control  <= "00000";		-- Control in binary (ADD and ADDI test)
		wait for 50 ns; 			-- result = 0x124578AB  and zeroOut = 0

		-- Add test cases here to drive the ALU implementation
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"000FFFF";
		control  <= "00001";		-- Control in binary --sub
		wait for 50 ns;

		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"0000037";
		control  <= "00000";		-- Control in binary --addi
		wait for 50 ns;

		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"FFF0000";
		control  <= "00010";		-- Control in binary and
		wait for 50 ns;

		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"00000FF";
		control  <= "00010";		-- Control in binary andi
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"000FFFF";
		control  <= "00011";		-- Control in binary or
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"00000FF";
		control  <= "00011";		-- Control in binary ori
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"0000003";
		control  <= "00100";		-- Control in binary sll
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"0000001";
		control  <= "00100";		-- Control in binary slli
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"0000003";
		control  <= "00101";		-- Control in binary srl
		wait for 50 ns;
					
		datain_a <= X"FFF0000";	-- DataIn in hex
		datain_b <= X"0000002";
		control  <= "00101";		-- Control in binary srli
		wait for 50 ns;
					

		wait; -- will wait forever
	END PROCESS;

END;